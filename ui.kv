Screen:

    FloatLayout:

        Image:
            source: "Assets/Title.png"
            size_hint: .95, 1
            pos_hint: {"center_x": .5, "top": 1.42}

        BoxLayout:
            orientation: "vertical"
            spacing: "20sp"
            size_hint: .9, .9
            pos_hint: {"center_x": .5, "center_y": .45}
            
            BoxLayout:

            
                MDLabel:
                    text: "Battery 1"
                    halign: "center"
                    font_style: "H4"
                    
                MDLabel:
                    id: bat1cycles
                    text: "0"
                    halign: "center"
                    font_style: "H4"
                    
                BoxLayout:
                    spacing: "5sp"
                    
                    Button:
                        text: "-"
                        font_size: "40sp"
                        background_color: .23, .53, .47, 1
                        background_normal: ''
                        size_hint: 1, .4
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_press: app.modify_cycles("1-")
                        
                        
                    Button:
                        text: "+"
                        font_size: "40sp"
                        background_color: .23, .53, .47, 1
                        background_normal: ''
                        size_hint: 1, .4
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_press: app.modify_cycles("1+")
                    
            BoxLayout:
            
                MDLabel:
                    text: "Battery 2"
                    halign: "center"
                    font_style: "H4"
                    
                MDLabel:
                    id: bat2cycles
                    text: "0"
                    halign: "center"
                    font_style: "H4"
                    
                BoxLayout:
                    spacing: "5sp"
                    
                    Button:
                        text: "-"
                        font_size: "40sp"
                        background_color: .23, .53, .47, 1
                        background_normal: ''
                        size_hint: 1, .4
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_press: app.modify_cycles("2-")
                        
                        
                    Button:
                        text: "+"
                        font_size: "40sp"
                        background_color: .23, .53, .47, 1
                        background_normal: ''
                        size_hint: 1, .4
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_press: app.modify_cycles("2+")
            
            BoxLayout:
            
                MDLabel:
                    text: "Battery 3"
                    halign: "center"
                    font_style: "H4"
                
                MDLabel:
                    id: bat3cycles
                    text: "0"
                    halign: "center"
                    font_style: "H4"
                    
                BoxLayout:
                    spacing: "5sp"
                    
                    Button:
                        text: "-"
                        font_size: "40sp"
                        background_color: .23, .53, .47, 1
                        background_normal: ''
                        size_hint: 1, .4
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_press: app.modify_cycles("3-")
                        
                        
                    Button:
                        text: "+"
                        font_size: "40sp"
                        background_color: .23, .53, .47, 1
                        background_normal: ''
                        size_hint: 1, .4
                        pos_hint: {"center_x": .5, "center_y": .5}
                        on_press: app.modify_cycles("3+")
                
		    MDLabel:
		        id: recommendedbattery
		        text: "Recommended Battery to Fly: "
                halign: "center"
                font_style: "H4"
		    
